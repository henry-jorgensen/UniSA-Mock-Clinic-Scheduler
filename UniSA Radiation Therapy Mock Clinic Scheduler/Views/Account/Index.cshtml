@using UniSA_Radiation_Therapy_Mock_Clinic_Scheduler.Firebase;
@{
    ViewData["Title"] = "Account";
    ViewData["Controller"] = "Account";

    UserModel CurrentUser = ViewBag.CurrentUser;

    FirebaseSharedFunctions firebase = new FirebaseSharedFunctions();
}

@if (CurrentUser != null)
{
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row d-flex justify-content-center">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Account Details</h5>
                            <hr />

                            <div class="form-group">Full Name: @CurrentUser.FirstName @CurrentUser.LastName</div>
                            <div class="form-group">Coordinator Code: @CurrentUser.CCCode</div>
                            <div class="form-group">Course Coordinator: @firebase.LoggedInAsCoordinator(CurrentUser.UserToken).Result</div>
                        </div>
                    </div><br />

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Coordinator Code</h5>
                            <hr />

                            <div class="form-group">
                                <input type="text" placeholder="Coordinator Code" class="form-control input" required />
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn button">Submit</button>
                            </div>
                        </div>
                    </div><br />

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Request User Data</h5>
                            <hr />

                            <div class="form-group">
                                <a class="btn button" asp-controller="Account" asp-action="RequestUserData">Request Data (GDPR)</a>
                            </div>
                            <div class="form-group">
                                <a class="btn button" asp-controller="Account" asp-action="DeleteUserData">Delete Data (GDPR)</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
}