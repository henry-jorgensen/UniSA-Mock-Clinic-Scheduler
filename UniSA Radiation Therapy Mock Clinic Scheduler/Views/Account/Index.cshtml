@using UniSA_Radiation_Therapy_Mock_Clinic_Scheduler.Firebase;
@{
    ViewData["Title"] = "Account";
    ViewData["Controller"] = "Account";

    UserModel CurrentUser = ViewBag.CurrentUser;

    FirebaseSharedFunctions firebase = new FirebaseSharedFunctions();
}

<div class="text-center">
    <h2>@ViewData["Title"]</h2>
    @{
        if (CurrentUser != null)
        {
            <span>First Name: </span>@CurrentUser.FirstName<br />
            <span>Last Name: </span>@CurrentUser.LastName<br />
            <span>Coordinator Code: </span>@CurrentUser.CCCode<br />
            <span>Course Coordinator: </span>@firebase.LoggedInAsCoordinator(CurrentUser.UserToken).Result
            <br />
            <div style="margin-top: 50px;">
                <div class="form-group">
                    <a class="btn btn-primary" asp-controller="Account" asp-action="RequestUserData">Request Data (GDPR)</a>
                </div>
                <div class="form-group">
                    <a class="btn btn-primary" asp-controller="Account" asp-action="DeleteUserData">Delete Data (GDPR)</a>
                </div>
            </div>
        }
    }
</div>