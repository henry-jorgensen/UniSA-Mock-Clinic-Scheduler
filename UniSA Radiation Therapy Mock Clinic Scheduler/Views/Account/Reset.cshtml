@model UniSA_Radiation_Therapy_Mock_Clinic_Scheduler.Models.ResetModel
@{
    ViewData["Controller"] = "Account";
    ViewData["Title"] = "Reset";

    ResetModel resetModel = ViewBag.ResetModel;
}   

<div class="container">
    <main role="main" class="pb-3">
        <div class="row d-flex justify-content-center">
            <div class="col-sm-6">
                <div class="card">   
                    <div class="card-body">
                        <h5 class="card-title">Reset Password</h5>

                        <form asp-action="Reset">
                            <div class="form-group">
                                <input asp-for="Email" type="text" placeholder="Email" class="form-control input" required />
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn button">Reset Password</button>
                            </div>
                        </form>

                        <div>
                            @if (resetModel!=null)
                                {
                                    @resetModel.Response;
                                }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>
       
</div>
