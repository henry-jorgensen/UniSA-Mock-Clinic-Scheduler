@{
    ViewData["Title"] = "Past Clinics";
    ViewData["Controller"] = "Home";
}

<div class="container">
    <main role="main" class="pb-3">
        <div class="row d-flex justify-content-center">
            <div class="col-sm-8" style="min-width: 400px;">
                <div class="text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>

                @{
                    for (int i = 1; i <= 40; i++)
                    {
                        <div class="card w-100">
                            <div class="card-body">
                                <h5 class="card-title">Past Clinic #@i<a href="#" class="stretched-link"></a></h5>
                                <p class="card-text">@i/08/2022 - UniSA City East Campus - Building GH2</p>
                            </div>
                        </div>
                        <br />
                    }
                }
            </div>
        </div>
    </main>
</div>