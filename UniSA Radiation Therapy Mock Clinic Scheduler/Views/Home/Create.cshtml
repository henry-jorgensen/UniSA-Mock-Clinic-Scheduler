@{
    ViewData["Title"] = "Create Clinic";
    ViewData["Controller"] = "Home";
}

@*Loading in any external files*@
<link href="~/css/create.css" rel="stylesheet" type="text/css">

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.13.5/xlsx.full.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.13.5/jszip.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/create.js"></script>

@*Organised in 'tabs' so that the user can move through the process one at a time*@
<div class="container">
    <div class="text-center">
        <h2>Create A Clinic</h2>
    </div>

    <div id="classForm" class="rounded-3">
        @*SELECTING TO LOAD A CLASS OR CREATE A NEW ONE*@
        <div class="tab">
            <h1 class="h1 mb-5">Select an Option</h1>
            <div class="form-group col-md mb-3">
                <div class="form-row text-center">
                    <div class="col-md mb-5">
                        @*Go to the create class section*@
                        <button id="newClassButton" class="btn btn-primary">New Class</button>
                    </div>
                </div>
                <div class="form-row text-center">
                    <div class="col-md mb-5">
                        @*Go to the load class section*@
                        <button id="loadClassButton" class="btn btn-primary">Load Class</button>
                    </div>
                </div>
            </div>
        </div>

        @*CREATING A CLASS*@
        <div class="tab">
            <form id="createAClassForm">
                <h1 class="h1">Create a Class</h1>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label for="classNameInput">Class name</label>
                        <input type="text" class="form-control" id="classNameInput" placeholder="Class name" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-3 mb-3">
                        <label for="studyPeriodInput" class="form-label">Study Period</label>
                        <select class="form-select" id="studyPeriodInput" required>
                            <option selected disabled value="">Choose...</option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                        </select>
                    </div>

                    <div class="form-group col-md-3 mb-3">
                        <label for="semesterInput" class="form-label">Semester</label>
                        <select class="form-select" id="semesterInput" required>
                            <option selected disabled value="">Choose...</option>
                            <option>1</option>
                            <option>2</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3 mb-5">
                        <label for="yearInput">Year</label>
                        <input type="text" class="form-control" id="yearInput" placeholder="2022" required>
                    </div>
                </div>

                @*Go to the populate class section*@
                <button style="float:right;" class="btn btn-primary" type="submit">Submit Class</button>
            </form>
        </div>

        @*LOADING A SAVED CLASS*@
        <div class="tab">
            <form id="loadAClassForm">
                <h1 class="h1">Load a Class</h1>
                <div class="form-group col-md-3 mb-5">
                    <label for="classSelection" class="form-label">Class name</label>
                    <select id="classSelection" class="form-select" required>
                        <option selected disabled value="">Choose...</option>
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>

                @*Go to the populate class section*@
                <button style="float:right;" class="btn btn-primary" type="submit">Load Class</button>
            </form>
        </div>

        @*POPULATING A CLASS*@
        <div class="tab">
            <div style="height:auto;">
                <form id="addStudentToClassForm">
                    <div>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <h1 class="h1">Class List</h1>
                            </div>
                            <div class="col-md-6 mb-3">
                                <input class="form-control" id="upload" type=file name="files[]">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="firstNameInput">First name</label>
                                <input id="firstNameInput" type="text" class="form-control" placeholder="First name"
                                    required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastNameInput">Last name</label>
                                <input id="lastNameInput" type="text" class="form-control" placeholder="Last name"
                                    required>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-5 mb-3">
                                <label for="studentIdInput">Student ID</label>
                                <input id="studentIdInput" type="text" class="form-control" placeholder="12345678"
                                    required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="usernameInput">Student Username</label>
                                <input id="usernameInput" type="text" class="form-control" placeholder="xxxyz000"
                                    required>
                            </div>
                            <div class="col-3 text-end">
                                <button id="addButton" type="submit" class=" mt-5 btn btn-dark"> Add
                                    Student</button>
                            </div>
                        </div>
                    </div>
                </form>

                <hr>
                <div class="row rounded bg-white">
                    <div class=" col-12">
                        <ul class="list-group"></ul>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th>
                                    <th scope="col">Student ID</th>
                                    <th scope="col">Student Username</th>
                                    <th scope="col">Delete</th>
                                </tr>
                            </thead>
                            <tbody id="list">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <form class="mt-3" id="saveClassListForm">
                @*Go to the preview class section*@
                <button style="float:right;" class="btn btn-primary" type="submit">Save Class</button>
            </form>
        </div>

        @*PREVIEW A CLASS*@
        <div class="tab">
            <form id="classListForm">
                <div class="my-5" style="height:auto;">
                    <h1 class="h1">Preview Class</h1>
                    <div class="row rounded bg-white">
                        <div class=" col-12">
                            <ul class=" list-group" id="list"></ul>
                        </div>
                    </div>
                    <button class="btn btn-primary" type="button">Finish</button>
                </div>
            </form>
        </div>

        @*PREVIOUS BUTTON*@
        <div style="overflow:auto;">
            <div style="float:left;">
                <button class="btn btn-secondary" type="button" id="prevBtn">Previous</button>
            </div>
        </div>

        @*FORM STEPS*@
        <div style="text-align:center;margin-top:40px;">
            <span class="step"></span>
            <span class="step"></span>
            <span class="step"></span>
            <span class="step"></span>
            <span class="step"></span>
        </div>
    </div>
</div>
