@{
    ViewData["Title"] = "Clinic Day";
    ViewData["Controller"] = "Home";
}

<link rel="stylesheet" type="text/css" href="/css/clinics.css">

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="~/js/classes/AJAXManager.js"></script>
<script src="~/js/moment.min.js"></script>
<script src="~/js/clinicDay.js"></script>

<div class="container">
	<main role="main" class="pb-3">
		<div class="card">
			@*MANIPULATE LOCAL STORAGE*@
			<div id="savedClinicOptions" class="hidden">
				<div class="form-group">
					<div class="form-row">
                        <div class="col-md mb-3">
                            <button id="newClinic" class="btn button">New Clinic</button>
                        </div>
						<div class="col-md mb-3">
                            <button id="updateClinic" class="btn button">Update Clinic</button>
                        </div>
						<div class="col-md mb-3">
                            <button class="btn button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseBreakForm" aria-expanded="true" aria-controls="collapseOne">Add Break</button>
                        </div>
                    </div>
				</div>

				<div class="accordion" id="accordionBreak">
				  <div class="accordion-item">
					<div id="collapseBreakForm" class="accordion-collapse collapse" data-bs-parent="#accordionBreak">
					  <div class="accordion-body">
						<div class="form-row">
							<div class="col-md mb-3">
								<label for="startTimeInput">Start Time</label>
								<input type="time" class="form-control input" id="startTimeInput" placeholder="12:00" required>
							</div>
							<div class="col-md mb-3">
								<label for="endTimeInput">End Time</label>
								<input type="time" class="form-control input" id="endTimeInput" placeholder="12:30" required>
							</div>
						</div>
						<div class="form-row">
							<div class="col-md mb-3">
								<label for="durationInput">Appointment Duration After</label>
								<input type="text" class="form-control input" id="durationInput" placeholder="15">
							</div>
							<div class="col-md mb-3">
								<label for="addBreak">Add to Clinic</label>
								<button id="addBreak" class="btn button" type="button">Add</button>
							</div>
						</div>
					  </div>
					</div>
				  </div>
				</div>
			</div>

			@*SELECT A CLINIC TO RUN*@
			<div id="selectAClinic">
				<div id="classSelect" class="card-body">
					<h5 class="card-title">Select a Class</h5>

					<form id="loadAClinicForm" class="d-flex">
						<div class="flex-column w-100">
							<div class="form-group">
								<label for="classSelection" class="form-label">Class name</label>
									<select id="classSelection" class="form-select form-control input-dropdown" required>
									<option selected disabled value="">Choose...</option>
								</select>         
							</div>
						</div>
					</form>
				</div>

				<div id="clinicSelect" class="card-body">
					<h5 class="card-title">Select a Clinic</h5>

					<form id="loadAClinicForm" class="d-flex">
						<div class="flex-column w-100">
							<div class="form-group">
								<label for="clinicSelection" class="form-label">Clinic name</label>
									<select disabled id="clinicSelection" class="form-select form-control input-dropdown" required>
									<option selected disabled value="">Choose...</option>
								</select>         
							</div>
						</div>
					</form>
				</div>
			</div>
		
			@*LOAD THE SELECTED CLINIC*@
			<div id="clinicArea" class="hidden col-sm-12" style="min-width: 200px;">
				<div id="filterArea" class="card-title">
					<h5>Room Filter</h5>
					<label for="allRooms">All Rooms</label>
					<input id="allRooms" name="filter" value="all" checked type="radio" />
				</div>

				<table class="table">
					<thead>
						<tr>
							<th>Date</th>
							<th>Location</th>
							<th>Patient</th>
							<th>Infectious</th>
							<th>Radiation Therapists</th>
							<th>Site</th>
							<th>Status</th>
							<th>Treatment</th>
						</tr>
					</thead>

					<tbody id="mockClinic">
						
					</tbody>
				</table>
			</div>
		</div>
	</main>
</div>
