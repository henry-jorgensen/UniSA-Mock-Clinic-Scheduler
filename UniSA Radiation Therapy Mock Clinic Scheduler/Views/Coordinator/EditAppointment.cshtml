@{

    AppointmentModel appointment = ViewBag.Appointment;
}

<div class="container">
    <div role="main" class="pb-lg-5">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-12">
                <div class="text-center">
                    <h1>Edit Appointment</h1>
                </div>

                <div class="card">
                    
                    <div class="card-body">
                        <form asp-controller="Coordinator" asp-action="EditAppointmentPost" method="post">
                            @if (appointment != null)
                            {
                                <input hidden name="apptId" value="@appointment.AppointmentID" />
                                <div class="form-group">
                                    <label for="apptTime">Time</label>
                                    <input type="time" id="apptTime" name="time" class="form-control" value="@appointment.Time" />
                                </div>
                                <div class="form-group">
                                    <label for="apptDate">Date</label>
                                    <input id="apptDate" name="date" class="form-control" value="@appointment.Date" />
                                </div>
                                <div class="form-group">
                                    <label for="apptPatient">Patient</label>
                                    <input id="apptPatient" name="patient" class="form-control" value="@appointment.Patient" />
                                </div>
                                <div class="form-group">
                                    <label for="apptRT1">Radiation Therapist 1</label>
                                    <input id="apptRT1" name="rt1" class="form-control" value="@appointment.RadiationTherapist1" />
                                </div>
                                <div class="form-group">
                                    <label for="apptRT2">Radiation Therapist 2</label>
                                    <input id="apptRT2" name="rt2" class="form-control" value="@appointment.RadiationTherapist2" />
                                </div>
                                <div class="form-group">
                                    <label for="apptInfect">Infectious</label>
                                    <input id="apptInfect" name="infect" class="form-control" value="@appointment.Infectious" />
                                </div>
                                <div class="form-group">
                                    <label for="apptRoom">Room</label>
                                    <input id="apptRoom" name="room" class="form-control" value="@appointment.Room" />
                                </div>
                                <div class="form-group">
                                    <label for="apptSite">Site</label>
                                    <input id="apptSite" name="site" class="form-control" value="@appointment.Site" />
                                </div>
                                <button class="btn btn-primary form-control" type="submit">Change</button>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
